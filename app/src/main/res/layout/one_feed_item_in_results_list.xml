<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:id="@+id/icon_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:src="@mipmap/ic_launcher"
        android:scaleType="centerInside"
        android:gravity="center_vertical"
        android:adjustViewBounds="true" />

    <TextView
        android:id="@+id/feed_name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:maxEms="10"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="abcdef"
        android:layout_alignBottom="@+id/icon_imageview"
        android:layout_toRightOf="@+id/icon_imageview"
        android:layout_toEndOf="@+id/icon_imageview" />



    <ImageButton
        android:id="@+id/add_imagebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:tag="add"
        android:gravity="center_vertical"
        android:src="@mipmap/ic_add_grey"
        android:paddingBottom="20dp"
        android:background="@null" />


</RelativeLayout>