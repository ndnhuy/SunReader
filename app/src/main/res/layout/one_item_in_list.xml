<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:gravity="center_vertical">
    <ImageView
        android:id="@+id/item_imageview"
        android:layout_width="@dimen/thumbnail_image_size"
        android:layout_height="@dimen/thumbnail_image_size"
        android:src="@drawable/stub"
        android:padding="20dp"

        android:adjustViewBounds="true" />


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:id="@+id/title_item_in_list_textview"
            android:textStyle="bold"
            android:textSize="@dimen/abc_text_size_medium_material"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="@dimen/abc_text_size_small_material"
            android:id="@+id/contentsnippet_item_in_list_textview" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/abc_text_size_small_material"
                android:text="by "/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:maxEms="8"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="@dimen/abc_text_size_small_material"
                android:id="@+id/author_item_in_list_textview"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/abc_text_size_small_material"
                android:text="/"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="@dimen/abc_text_size_small_material"
                android:id="@+id/date_item_in_list_textview"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/abc_text_size_small_material"
                android:text="  "/>

            <ImageView
                android:id="@+id/read_mark_imgView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@null"/>

        </LinearLayout>





    </LinearLayout>

</LinearLayout>